---
import FirebaseObject from '../components/FirebaseObject.astro';
import LibreCounter from '../components/LibreCounter.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="BingoLetes - Juega al bingo desde casa !" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-orange-50/75 dark:bg-slate-900">
		<slot />
		<LibreCounter/>
		<FirebaseObject/>
	</body>
</html>

<style is:global>
	@font-face {
        font-family: 'Righteous';
        font-style: normal;
        font-weight: 400;
        src: url('/fonts/Righteous-Regular.ttf') format('woff');
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
    }
</style>